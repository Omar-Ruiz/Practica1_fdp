#include <stdio.h>
int main(){ // Piramide
    int a, b, c, h, q, x;
    scanf("%d", &b);
    for(c=1;c<=b;c++){
        for(h=c;h<=b;h++){
                printf(" ");}
        a=c;
        for(x=0;x<c;x++){
               if(a>9)
                   a%=10;
               printf("%d", a);
               a+=1;}
        a-=1;
        for(q=1;q<=c;q++){
                if(a==0)
                       a=10;
                a-=1;
                printf("%d", a);}
      printf("\n");}
return 0;
}
